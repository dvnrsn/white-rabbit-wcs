---
// Theme Switcher Component
---

<div class="theme-switcher">
  <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme menu">
    <span class="theme-icon">âš¡</span>
  </button>

  <div class="theme-menu" id="theme-menu">
    <button class="theme-option" data-theme="white-rabbit">
      <span class="theme-name">White Rabbit</span>
      <span class="theme-preview white-rabbit-preview"></span>
    </button>
    <button class="theme-option" data-theme="classic-matrix">
      <span class="theme-name">Classic Matrix</span>
      <span class="theme-preview classic-preview"></span>
    </button>
    <button class="theme-option" data-theme="neo-modern">
      <span class="theme-name">Neo-Modern</span>
      <span class="theme-preview neo-preview"></span>
    </button>
    <button class="theme-option" data-theme="minimal-matrix">
      <span class="theme-name">Minimal Matrix</span>
      <span class="theme-preview minimal-preview"></span>
    </button>
  </div>
</div>

<style>
  .theme-switcher {
    position: fixed;
    top: 2rem;
    right: 2rem;
    z-index: 1000;
  }

  .theme-toggle {
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    color: var(--accent-primary);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .theme-toggle:hover {
    border-color: var(--accent-primary);
    box-shadow: var(--shadow-glow);
    animation: none;
  }

  .theme-menu {
    position: absolute;
    top: 60px;
    right: 0;
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 8px;
    padding: 0.5rem;
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s;
  }

  .theme-menu.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .theme-option {
    width: 100%;
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    padding: 0.75rem 1rem;
    margin-bottom: 0.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-family: var(--font-primary);
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .theme-option:last-child {
    margin-bottom: 0;
  }

  .theme-option:hover {
    border-color: var(--accent-primary);
    background: var(--bg-surface);
    transform: translateX(-3px);
  }

  .theme-option.active {
    border-color: var(--accent-primary);
    background: var(--bg-surface);
  }

  .theme-preview {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1px solid var(--border-color);
  }

  .classic-preview {
    background: #00ff41;
  }

  .white-rabbit-preview {
    background: linear-gradient(135deg, #ffffff 0%, #00ff41 100%);
  }

  .neo-preview {
    background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 50%, #8b5cf6 100%);
  }

  .minimal-preview {
    background: #0a0a0a;
    border-color: #00ff41;
  }

  @media (max-width: 768px) {
    .theme-switcher {
      top: 1rem;
      right: 1rem;
    }

    .theme-toggle {
      width: 40px;
      height: 40px;
      font-size: 1.2rem;
    }
  }
</style>

<script>
  // Theme switcher logic
  const toggle = document.getElementById('theme-toggle');
  const menu = document.getElementById('theme-menu');
  const themeOptions = document.querySelectorAll('.theme-option');

  // Get saved theme or default to white-rabbit
  const savedTheme = localStorage.getItem('white-rabbit-theme') || 'white-rabbit';
  document.documentElement.setAttribute('data-theme', savedTheme);

  // Mark active theme
  themeOptions.forEach(option => {
    if (option.getAttribute('data-theme') === savedTheme) {
      option.classList.add('active');
    }
  });

  // Toggle menu
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('active');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!toggle?.contains(e.target as Node) && !menu?.contains(e.target as Node)) {
      menu?.classList.remove('active');
    }
  });

  // Theme selection
  themeOptions.forEach(option => {
    option.addEventListener('click', () => {
      const theme = option.getAttribute('data-theme');
      if (theme) {
        // Update theme
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('white-rabbit-theme', theme);

        // Update active state
        themeOptions.forEach(opt => opt.classList.remove('active'));
        option.classList.add('active');

        // Close menu
        menu?.classList.remove('active');
      }
    });
  });
</script>
